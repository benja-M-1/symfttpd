{% set server = subject %}

{% block modules %}
server.modules = (
    "mod_rewrite",
    "mod_access",
    "mod_accesslog",
    "mod_setenv",
    "mod_fastcgi",
)
{% endblock modules %}

{% block server %}
server.document-root  = "{{ server.documentRoot }}"
server.indexfiles     = ("index.php", "index.html", "index.htm", "default.htm")
server.port           = {{ server.port }}
{%- if server.address is not null -%}
server.bind           = "{{ server.address }}"
{%- endif -%}
server.follow-symlink = "enable"
static-file.exclude-extensions = (".php")

# http://redmine.lighttpd.net/issues/406
server.force-lowercase-filenames = "disable"

server.pid-file       = "{{ server.pidfile }}"

server.errorlog       = "{{ server.errorLog }}"
accesslog.filename    = "{{ server.accessLog }}"

debug.log-file-not-found = "enable"
debug.log-request-header-on-error = "enable"
setenv.add-response-header = ( "X-Symfttpd" => "1")
{% endblock server %}

{% block fastcgi %}
fastcgi.server = ( ".php" =>
  ( "localhost" =>
    (
      "socket" => "{{ server.gateway.socket|raw }}",
      {%- if server.gateway.start is not defined -%}
      "bin-path" => "{{ server.gateway.command }}",
      {%- endif -%}
      "max-procs" => 1,
      "max-load-per-proc" => 1,
      "idle-timeout" => 120,
      "bin-environment" => (
        "PHP_FCGI_CHILDREN" => "3",
        "PHP_FCGI_MAX_REQUESTS" => "100",
        "IN_SYMFTTPD" => "1"
      )
    )
  )
)
{% endblock fastcgi %}

{% include 'lighttpd/mime-types.conf.twig' %}
{% include 'lighttpd/rules.conf.twig' with {'server': server} %}
