{
    "alias": "symfttpd.phar",
    "blacklist": ["Compiler.php"],
    "directories": ["src"],
    "finder": [
        {
            "name": ["*.php", "*.twig"],
            "in": ["src"],
            "exclude": ["Tests"]
        },
        {
            "name": ["*.php"],
            "in": ["vendor"],
            "exclude": [
                "twig/twig/doc",
                "twig/twig/test",
                "monolog/monolog/doc",
                "monolog/monolog/tests",
                "pimple/pimple/tests",
                "symfony/config/Symfony/Component/Config/Tests",
                "symfony/console/Symfony/Component/Console/Tests",
                "symfony/event-dispatcher/Symfony/Component/EventDispatcher/Tests",
                "symfony/filesystem/Symfony/Component/Filesystem/Tests",
                "symfony/finder/Symfony/Component/Finder/Tests",
                "symfony/process/Symfony/Component/Process/Tests",
                "symfony/resource-watcher/Symfony/Component/ResourceWatcher/Tests",
                "bin"
            ]
        }
    ],
    "git-version": "package_version",
    "main": "bin/symfttpd",
    "output": "symfttpd.phar",
    "stub": true
}