{% set server = subject %}

worker_processes  2;
pid {{ server.pidfile }};

# [ debug | info | notice | warn | error | crit ]
error_log  {{ server.errorLog }}  debug;

{% block events %}
events {
    worker_connections   200;
    # use [ kqueue | rtsig | epoll | /dev/poll | select | poll ] ;
    use kqueue;
}
{% endblock events %}

{% block http %}
http {
    {% include 'mime-types.conf.twig' %}
    default_type  application/octet-stream;

    log_format main      '$remote_addr - $remote_user [$time_local]  '
    '"$request" $status $bytes_sent '
    '"$http_referer" "$http_user_agent" '
    '"$gzip_ratio"';

    log_format download  '$remote_addr - $remote_user [$time_local]  '
    '"$request" $status $bytes_sent '
    '"$http_referer" "$http_user_agent" '
    '"$http_range" "$sent_http_content_range"';

    client_header_timeout  3m;
    client_body_timeout    3m;
    send_timeout           3m;

    client_header_buffer_size    1k;
    large_client_header_buffers  4 4k;

    {% block compression %}
    gzip on;
    gzip_min_length  1100;
    gzip_buffers     4 8k;
    gzip_types       text/plain;
    {% endblock %}

    output_buffers   1 32k;
    postpone_output  1460;

    sendfile         on;
    tcp_nopush       on;

    tcp_nodelay      on;
    send_lowat       12000;

    keepalive_timeout  75 20;

    # lingering_time     30;
    # lingering_timeout  10;
    # reset_timedout_connection  on;

    {% block server %}
    server {
        listen        {{ server.port }};
        {%- if server.address is not null -%}
            server_name   {{ server.address }};
        {%- endif -%}
        root          {{ server.documentRoot }};

        access_log    {{ server.accessLog }}  main;

        # strip app.php/ prefix if it is present
        rewrite ^/{{ server.indexFile|replace({'.php': ''}) }}\.php/?(.*)$ /$1 permanent;

        location / {
            index {{ server.indexFile }};
            try_files $uri @rewriteapp;
        }

        location @rewriteapp {
            rewrite ^(.*)$ /{{ server.indexFile }}/$1 last;
        }

        location ~ ({{ server.executableFiles|join('|')|replace({'.php': ''}) }})\.php(/|$) {
            fastcgi_pass   {{ server.gateway.socket|raw }};
            fastcgi_split_path_info ^(.+\.php)(/.*)$;
            {%- include 'fastcgi.conf.twig' -%}
            fastcgi_param  SCRIPT_FILENAME    $document_root$fastcgi_script_name;
            fastcgi_param  HTTPS              off;
        }
    }
    {% endblock server %}
}
{% endblock http %}