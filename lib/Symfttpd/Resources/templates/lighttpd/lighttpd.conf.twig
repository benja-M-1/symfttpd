{% block modules %}
server.modules = (
    "mod_rewrite",
    "mod_access",
    "mod_accesslog",
    "mod_setenv",
    "mod_fastcgi",
)
{% endblock modules %}

{% block server %}
server.document-root  = "{{ document_root }}"
server.indexfiles     = ("index.php", "index.html", "index.htm", "default.htm")
server.port           = {{ port }}
{%- if bind is not null -%}
server.bind           = "{{ bind }}"
{%- endif -%}
server.follow-symlink = "enable"
static-file.exclude-extensions = (".php")

# http://redmine.lighttpd.net/issues/406
server.force-lowercase-filenames = "disable"

server.pid-file       = "{{ pidfile }}"

server.errorlog       = "{{ error_log }}"
accesslog.filename    = "{{ access_log }}"

debug.log-file-not-found = "enable"
debug.log-request-header-on-error = "enable"
setenv.add-response-header = ( "X-Symfttpd" => "1")
{% endblock server %}

{% block fastcgi %}
fastcgi.server = ( ".php" =>
  ( "localhost" =>
    (
      "socket" => "{{ sys_get_temp_dir() }}/symfttpd-php-" + PID + ".socket",
      "bin-path" => "{{ php_cgi_cmd }} -d error_log=/dev/stderr'",
      "max-procs" => 1,
      "max-load-per-proc" => 1,
      "idle-timeout" => 120,
      "bin-environment" => (
        "PHP_FCGI_CHILDREN" => "3",
        "PHP_FCGI_MAX_REQUESTS" => "100",
        "IN_SYMFTTPD" => "1"
      )
    )
  )
)
{% endblock fastcgi %}

